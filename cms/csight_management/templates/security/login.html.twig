{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
<form class="login-form" method="post">

    <div class="form-content">
        <h1 class="">Login</h1>
        <div class="login-form-item">
            {# <label for="inputEmail">Email:</label> #}
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Email" class="form-control" required autofocus>
        </div>

        <div class="login-form-item">
            {# <label for="inputPassword">Password:</label> #}
            <input type="password" name="password" id="inputPassword" placeholder="Password" class="form-control" required>
        </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

        <div class="login-form-item">
            <button class="btn btn-lg btn-primary" type="submit">Inloggen</button>
        </div>
    </div>
</form>
{% endblock %}
